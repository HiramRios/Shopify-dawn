<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}</noscript>




<div class = "container">
<div  class="grid product-grid grid--3-col-desktop">
{%- for block in section.blocks -%}
<div class = "feature-prod grid__item" >
  <img class= "img-style" src= "{{ block.settings.imageOne | image_url: width: 183 }}">
<span>{{ block.settings.description-text }}</span>
</div>

{%- endfor -%}
</div>
</div>




{% schema %}
{
  "blocks": [
    {
      "type": "first-section",
      "name": "First Sections",
      "limit": 3,
      "settings": [
        {
          "id": "imageOne",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "description-text",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Url link direction"
        }
      ]
    }
  ]
}
{% endschema %}
















